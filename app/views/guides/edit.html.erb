<div class="container mt-5 mb-5 pb-5 pt-5">  
  <h1 class="display-1 mb-5 text-muted text-center card shadow bg-dark p-5">
    Editing <%= render html:  @guide.title %>
  </h1>

  <div class="p-5 shadow card bg-secondary">
    <%= render "form", guide: @guide %>

    <div class="btn-group mt-5" role="group" aria-label="Basic mixed styles example">
      <%= link_to "Show this guide", @guide, type: "button", class: "btn btn-sm btn-primary mt-2 shadow" %>
      <%= link_to "Back to guides", guides_path, type: "button", class: "btn btn-sm btn-secondary mt-2 shadow" %>
    </div>
  </div>
</div>
