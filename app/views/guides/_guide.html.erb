<div class="col-8">
  <div class="p-4 shadow card mb-3 mt-3 bg-focuscard me-3">
    <div id="<%= dom_id guide %>" class="col-12">
      <div class="row shadow p-3 mb-3 rounded bg-description">
        <div class="col-5 p-2">
          <div>
            <small>
              <strong class="text-muted">Step</strong>&emsp;&emsp;&emsp;&emsp;&emsp;
              <span class="badge bg-nightsky p-1 shadow">
                <% guide.steps.each do |step| %>
                  Step <%= step.number %>
                <% end %>
              </span>
            </small>
          </div>
          <div>
            <small>
              <strong class="text-muted">Technology</strong>&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow"><%= guide.language.name %></span>
            </small>
          </div>
          <div>
            <small>
              <% if guide.path.nil? %>
                <strong class="text-muted">Directory</strong>&emsp;&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow">no path</span>
              <% else %>
                <strong class="text-muted">Directory</strong>&emsp;&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow"><%= guide.path %></span>
              <% end %>
            </small>
          </div>
          <br>
        </div>
        <div class="col-7 p-2">
          <span>
            <% guide.steps.each do |step| %>
              <small>Step <%= step.number %> overview</small>
              <p><%= guide.overview %></p>
            <% end %>
          </span>
        </div>
        <pre class="hljs">
          <code id="copy_txt" class="hljs <%= guide.language.name %> rounded"><%= guide.body %></code>
        </pre>
      </div>
    </div>

    <div class="accordion card shadow bg-description rounded" id="guide-accordion">
      <div class="accordion-item">
        <h1 class="accordion-header bg-description" id="headingTwo">
          <button
            class="accordion-button collapsed display-5  bg-description"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseTwo"
            aria-expanded="false"
            aria-controls="collapseTwo"
          >
            <span class="fw-bold"><%= guide.title %></span>| | guide description
          </button>
        </h1>
        <div
          id="collapseTwo"
          class="accordion-collapse collapse"
          aria-labelledby="headingTwo"
          data-bs-parent="#guide-accordion"
        >
          <div class="accordion-body bg-description">
            <%= guide.description.present? ? (guide.description) : (render 'guides/no_description') %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% guide.guide_codes.each do |guide_code| %>
    <div class="p-4 shadow mb-3 card mt-3 bg-focuscard me-3">
      <div class="col-12">
        <div class="row shadow p-3 mb-3 rounded bg-description">
          <div class="col-5 p-2">
            <div>
              <small>
                <strong class="text-muted">Step</strong>&emsp;&emsp;&emsp;&emsp;&emsp;
                <span class="badge bg-nightsky p-1 shadow">
                  <% guide_code.steps.each do |step| %>
                    Step <%= step.number %>
                  <% end %>
                </span>
              </small>
            </div>
            <div>
              <small>
                <strong class="text-muted">Technology</strong>&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow"><%= guide_code.lang.name %></span>
              </small>
            </div>
            <div>
              <small>
                <% if guide_code.path.nil? %>
                  <strong class="text-muted">Directory</strong>&emsp;&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow">no path</span>
                <% else %>
                  <strong class="text-muted">Directory</strong>&emsp;&emsp;&emsp;<span class="badge bg-nightsky p-1 shadow"><%= guide_code.path %></span>
                <% end %>
              </small>
            </div>
            <br>
          </div>
          <div class="col-7 p-2">
            <span>
              <% guide_code.steps.each do |step| %>
                <small>Step <%= step.number %> overview</small>
                <p><%= guide_code.overview %></p>
              <% end %>
            </span>
          </div>
          <pre class="hljs">
            <code class="hljs <%= guide_code.lang.name %> rounded"><%= guide_code.code %></code>
          </pre>
        </div>
      </div>

      <div class="accordion card shadow bg-description rounded" id="guide_code-accordion">
        <div class="accordion-item">
          <h1 class="accordion-header bg-description" id="headingTwo">
            <button
              class="accordion-button collapsed display-5 bg-description"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseTwo"
              aria-expanded="false"
              aria-controls="collapseTwo"
            >
              <span class="fw-bold"><%= guide.title %></span>| | guide description
            </button>
          </h1>
          <div
            id="collapseTwo"
            class="accordion-collapse collapse"
            aria-labelledby="headingTwo"
            data-bs-parent="#guide_code-accordion"
          >
            <div class="accordion-body bg-description">
              <%= guide_code.description.present? ? (guide_code.description) : (render 'guides/no_description') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="p-4 pt-5 shadow col-2 card mb-3 mt-3 bg-description me-3">
  <% guide.tags.each do |tag| %>
    <div>
      <%= link_to tag.name, guides_path(tag: tag.name), class: "badge bg-focuscard text-decoration-none shadow p-2 m-1" %>
    </div>
  <% end %>
</div>

<div class="p-4 pt-5 shadow col card mb-3 mt-3 me-0 bg-description">
  <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
    <%= link_to "Show", guide, type: 'button', class: 'btn btn-sm shadow py-2' %>
    <%= link_to "Edit", edit_guide_path(guide), type: 'button', class: 'btn btn-sm shadow py-2' %>
    <%= link_to "Delete", guide, method: :delete, data: { confirm: "Are you shure?" }, type: 'button', class: 'btn btn-sm shadow py-2' %>
  </div>
</div>
