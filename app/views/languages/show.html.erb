<div class="container mt-5 mb-5 pb-5 pt-5">
  <h1 class="display-6 mb-3 text-muted text-center card shadow bg-dark p-5 header-nav">
    <%= render html:  @language.name %>
  </h1>

  <div class="p-5 shadow card bg-focuscard">
    <%= render @language %>

    <div class="btn-group col-8" role="group" aria-label="Basic mixed styles example">
      <%= link_to "Edit this language", edit_language_path(@language), class: "btn btn-sm btn-primary mt-3 shadow" %>
      <%= link_to "Back to languages", languages_path, class: "btn btn-sm btn-secondary mt-3 shadow" %>
    </div>
  </div>

  <div class="d-grid gap-2 mt-3">
    <%= button_to "Destroy this language", @language, method: :delete, type: "button", class: "btn btn-sm btn-danger shadow col-12" %>
  </div>
</div>
