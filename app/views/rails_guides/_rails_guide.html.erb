<div class="p-4 shadow col-8 card mb-3 mt-3 bg-light me-3">
  <div id="<%= dom_id rails_guide %>" class="col-12">
    <div class="row">
      <div class="col-4">
        <strong>Author:</strong>
      </div>
      <div class="col-4">
        <%= rails_guide.author %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-4">
        <strong>Title:</strong>
      </div>
      <div class="col-4">
        <%= rails_guide.title %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-4">
        <strong>Description:</strong>
      </div>
      <div class="col-4">
        <%= rails_guide.description %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-4">
        <strong>Created:</strong>
      </div>
      <div class="col-4">
        <small class="text-muted"><%= rails_guide.created_at %></small>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col">
        <pre>
          <code class="rounded hljs html"><%= rails_guide.body %></code>
        </pre>
      </div>
    </div>
  </div>
</div>
