<div id="<%= dom_id rails_guide %>" class="p-5 shadow col-8 card mb-3 mt-5 bg-light">
  <div class="row">
    <div class="col-4">
      <strong>Author:</strong>
    </div>
    <div class="col-4">
      <%= rails_guide.author %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-4">
      <strong>Title:</strong>
    </div>
    <div class="col-4">
      <%= rails_guide.title %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-4">
      <strong>Description:</strong>
    </div>
    <div class="col-4">
      <%= rails_guide.description %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-4">
      <strong>Created:</strong>
    </div>
    <div class="col-4">
      <small class="text-muted"><%= rails_guide.created_at %></small>
    </div>
  </div>
  <hr>
  <div class="row mt-5">
    <div class="col">
      <div class="card p-5 shadow">
        <%= rails_guide.body %>
      </div>
    </div>
  </div>
</div>
