<div class="row mt-5">
  <div class="col-2">
    <%= render "tutorials_nav_group_list" %>
  </div>

  <div class="col-8 mx-3">
    <h1 class="display-6 mb-3 mt-5 text-muted text-center card shadow bg-dark p-5 header-nav">
      Tutorials
    </h1>

    <% @tutorials.each do |tutorial| %>
      <div class="p-5 mb-5 shadow card bg-dark">
        <div class="row">
          <div id="guide_<%= tutorial.id %>" class="card p-5 shadow bg-description col-12">
            <p class="badge bg-focuscard text-decoration-none shadow p-2 m-1">
              <b><%= tutorial.language.name %></b> / <b>tutorials</b> / <%= render html: tutorial.title %>
            </p>
          </div>
        </div>
        <div class="row">
          <%= render tutorial %>
        </div>
        <div class="d-grid gap-2">
          <%= link_to "Show this tutorial", tutorial, class: "btn btn-sm btn-success mt-3 shadow" %>
        </div>
      </div>
    <% end %>
    <%= link_to "New tutorial", new_tutorial_path, class: "btn btn-sm btn-primary shadow d-grid gap-2 fixed-button col-8" %>
  </div>

  <div class="col">
    <h1 class="display-6 mb-3 mt-5 text-muted text-center card shadow bg-dark p-5 me-2 header-nav">
      Filters
    </h1>
    <div class="p-5 mb-5 shadow card bg-skyblue me-2 sticky-nav">
      <p class="text-center h4 text-black-50 p-3">
        <span class="text-muted">Finded</span> <%= pluralize(@tutorials.all.length, 'tutorial') %>
      </p>
      <%= will_paginate @tutorials, list_classes: %w(pagination justify-content-center), previous_label: '&laquo;', next_label: '&raquo;' %>
      <div class="text-center">
        <%= page_entries_info @tutorials, list_classes: %w(text-center) %>
      </div>
    </div>
  </div>
</div>
