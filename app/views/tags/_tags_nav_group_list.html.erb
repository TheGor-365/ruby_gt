<h1 class="display-6 mb-3 mt-5 ms-3 text-muted text-center card shadow bg-dark p-5 header-nav">
  Navigation
</h1>

<div class="sticky-nav">
  <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-skyblue me-0 m-3 mt-3 card shadow rouded">
    <% @tags.each do |tag| %>
      <div class="list-group nav-group-list list-group-flush scrollarea">
        <a href="#tag_<%= tag.id %>" class="list-group-item list-group-item-action py-3 lh-sm rouded mb-1 bg-skyblue" aria-current="true">
          <div class="d-flex w-100 align-items-center justify-content-between">
            <strong class="mb-1"><%= tag.name %></strong>
            <small><%= tag.created_at %></small>
          </div>
          <div class="col-10 mb-1 small"><%= tag.guides.count %> guides</div>
          <div class="col-10 mb-1 small"><%= tag.snippets.count %> snippets</div>
          <div class="col-10 mb-1 small"><%= tag.commands.count %> commands</div>
        </a>
      </div>
    <% end %>
  </div>
</div>
